<header id="headerhome">
    <div id="headerMenu">
        <li><a href="/products">Tienda</a></li>
        <li><a href="/profile">Perfil</a></li>
        <li><a id="btnLogout" href="/logout">Logout</a></li>
    </div>
</header>
<section>
    <div>
        <h1>Bienvenid@ {{name}} {{lastName}}!</h1>
    </div>
</section>
<main id="main" class="container mt-5">
    <div class="row d-flex d-flex justify-content-between">
        {{#each products}}
        <div class="card col-3 m-2 border border-4">
            <img src="{{thumbnail}}" class="img-fluid">
            <div class="card-body">
                <h5 class="card-title text-center">{{title}}</h5>
                <p class="card-text text-center mb-0">{{description}}</p>
                <h2 class="card-text text-center ">$ {{price}}</h2>
                <p class="card-text text-center ">Cantidad: {{stock}}</p>
                <div class="d-flex justify-content-center">
                    <button type="button" class="btn btn-primary">Agregar</button>
                </div>
            </div>
        </div>
        {{/each}}
        <div id="paginacion">
            {{#if hasPrevPage}}
            <button id="prev">Anterior</button>
            {{else}}
            <button disabled id="prev">Anterior</button>
            {{/if}}
            <p id="page"> {{page}} </p>
            {{#if hasNextPage}}
            <button id="next">Siguiente</button>
            {{else}}
            <button disabled id="next">Siguiente</button>
            {{/if}}
        </div>
        <div class="d-flex justify-content-center">
            {{ page }} / {{ totalPages }}
        </div>
    </div>
</main>
